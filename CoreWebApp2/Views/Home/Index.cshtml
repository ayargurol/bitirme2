<script>
    $(".arama-buton").click(function () {
        var word = $(".arama").val();
        var url = "@Url.Action("Search","Home")/" + word;
        var content = "";
        $.ajax({
            method: 'GET',
            url: url,
            data: { word: word },
            success:
                function (veri) {
                    if (veri.status) {
                        for (var i = 0; i < veri.data.length; i++) {
                            content +=
                                ' <tr>' +
                                ' <td><img src="' + veri.data[i].resim + '" alt="" class="h-8"></td>' +
                                '  <td> ' +
                                '<a href = ' + veri.data[i].link + '>' + veri.data[i].isim + '</a>' +
                                ' </td>' +
                                '<td class="text-right text-muted d-none d-md-table-cell text-nowrap">' + veri.data[i].puan + '</td>' +
                                ' <td class="text-right text-muted d-none d-md-table-cell text-nowrap">' + veri.data[i].satıcı + '</td>' +
                                ' <td class="text-right">' +
                                '<strong>' + veri.data[i].fiyat + '</strong>' +
                                '</td>' +
                                ' </tr>';
                        }
                        var table = ' <div class="card">' + ' <table class="table card-table table-vcenter" id="myTable"> <tr><th>a</th> <th>b</th> <th>c</th> <th>d</th> <th>e</th></tr>' + content + ' </table > ' + ' </div >';
                        $(".sonuclar").html(table);
                       
                    }
                },
        });
    });
</script>
