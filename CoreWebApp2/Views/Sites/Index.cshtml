@model CoreWebApp2.Controllers.SitesController.ViewModel

@{
    ViewData["Title"] = "Admin Paneli";
}

<h2>Siteler</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Site İsmi
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sites)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteName)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.SiteId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.SiteId">Ayrıntılar</a> |
                    <a asp-action="Delete" asp-route-id="@item.SiteId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Kayıtlar</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Aranan Kelime
            </th>

            <th>
                Aranma Sayısı
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Records)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SearchedWord)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.count)
                </td>
            </tr>
        }
    </tbody>
</table>